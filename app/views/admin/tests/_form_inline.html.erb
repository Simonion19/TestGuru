<%= form_with model: [:admin, test], 
              url: update_inline_admin_test_path(test), 
              local: true, 
              data: { test_id: test.id },
              class: 'form-inline hidden' do |form| %>
  <%= form.text_field :title, class: 'form-inline__control mr-2' %>
  <%= form.submit 'Edit', class: 'form-inline__btn btn-primary' %>
<% end %>
<h1>Create Question</h1>

<form action="/tests/<%= params[:test_id] %>/questions" method='post'>
  <input name='authenticity_token' value='<%= form_authenticity_token %>' type='hidden'>
  <input name="question[text]" placeholder='Enter your question' type='text' id='question-text'>
  <button type='submit'>Create</button>
</form>